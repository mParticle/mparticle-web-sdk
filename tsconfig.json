{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "declaration": false,
        "lib": ["es5", "es6", "dom"],
        "rootDir": ".",
        "outDir": "build",
        "sourceMap": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "target": "es5",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        // this is required for importing the 'fetch-mock/esm/client' module, otherwise it errors
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
